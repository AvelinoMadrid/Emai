@model Clase


@{
    ViewData["Title"] = "agregarclase";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .select2-container--default .select2-selection--multiple .select2-selection__rendered {
        padding: 0 .375rem .375rem;
        margin-bottom: -.375rem;
    }

    .select2-container--default .select2-selection--multiple .select2-selection__rendered {
        box-sizing: border-box;
        list-style: none;
        margin: 0;
        margin-bottom: 0px;
        padding: 0 5px;
        width: 100%;
    }

    .select2-container .select2-selection--multiple .select2-selection__rendered {
        display: inline-block;
        overflow: hidden;
        padding-left: 8px;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>

<div class="card">
    <div class="card-header">
        @ViewBag.Accion
    </div>
    <!-- /.card-header -->
    <div class="card-body" ng-controller="myCtrl">

        <form asp-action="GuardarCambios" asp-controller="Clase" method="post" class="needs-validation" novalidate>

            <div class="row">
                <input asp-for="idClase" type="hidden" />



                <div class="col-md-4 form-group">
                    <label class="form-label">Nombre de la clase</label>
                    <input type="text" class="form-control form-control-sa" asp-for="Nombre" ng-model="nombre" name="Nombre" id="Nombre" required />
                    <div class="valid-feedback">Válido.</div>
                    <div class="invalid-feedback">Por favor rellene este campo.</div>
                </div>

    


                <div class="col-md-4 form-group">
                    <div class="form-group">
                        <label>Nombre del Curso</label>
                        <select class="form-control  select" style="width: 100%;" asp-for="CNormal" ng-model="CNormal" name="CNormal" id="CNormal" required>
                            <option selected disabled value="">Escoger nombre del curso</option>
                            <option value="Normal">Normal</option>
                            <option value="Verano">Verano</option>

                        </select>
                        <div class="valid-feedback">Válido.</div>
                        <div class="invalid-feedback">Por favor rellene este campo.</div>
                    </div>
                </div>


                <div class="col-md-4 form-group">
                    <label class="form-label">Clase de Verano</label>
                    <input type="text" class="form-control form-control-sa" asp-for="CVerano"  name="CVerano" id="CVerano" placeholder="Opcional" />
                </div>


                <div class="col-md-4 form-group" data-select2-id="43">
                    <label class="form-label">Día y Hora</label>


                    <select class="form-control select" asp-for="Dia" id="Dia" name="Dia" required>
                        <option selected disabled value="">Escoger un Dia y Hora</option>
                        @foreach (var horarios in Model.HorarioDisponibles)
                        {
                            <option value="@horarios.IdHorario">@horarios.Dia</option>
                        }
                    </select>
                    <div class="valid-feedback">Válido.</div>
                    <div class="invalid-feedback">Por favor rellene este campo.</div>
                </div>




                <div class="col-md-4 form-group">
                    <label class="form-label">Día y Hora 2</label>
                    <select class="form-control select" asp-for="Dia2" >
                        <option selected disabled value="">Escoger un Dia y Hora</option>
                        @foreach (var horarios in Model.HorarioDisponibles)
                        {
                            <option value="@horarios.IdHorario">@horarios.Dia</option>
                        }
                    </select>
                    <div class="valid-feedback">Válido.</div>
                    <div class="invalid-feedback">Por favor rellene este campo.</div>
                </div>



                <div class="col-md-4 form-group">
                    <label class="form-label">Día y Hora 3</label>
                    <select class="form-control select" asp-for="Dia3" >
                        <option selected disabled value="">Escoger un Dia y Hora</option>
                        @foreach (var horarios in Model.HorarioDisponibles)
                        {
                            <option value="@horarios.IdHorario">@horarios.Dia</option>
                        }
                    </select>
                    <div class="valid-feedback">Válido.</div>
                    <div class="invalid-feedback">Por favor rellene este campo.</div>
                </div>



                <div class="col-md-12 form-group">
                    <label class="form-label">Costo</label>
                    <input type="number" class="form-control form-control-sa" asp-for="Costo" name="Costo" id="Costo" required />
                    <div class="valid-feedback">Válido.</div>
                    <div class="invalid-feedback">Por favor rellene este campo.</div>
                </div>



                <div class="col-md-6 form-group">
                    <button type="submit" class="btn btn-success btn-sm" ng-click="submitForm()" style="width:100% !important">Guardar Cambios</button>
                </div>

                <div class="col-md-6 form-group">
                    <a asp-action="Clase" asp-controller="Clase" class="btn btn-warning btn-sm" style="width:100% !important">Regresar </a>
                </div>

            </div>
        </form>

    </div>
</div>



