@using emai.Servicios.Commons
@model BaseResponseV1<AlumnoModel>

@* @{
    var httpClient = new HttpClient();
} *@

@{
    ViewData["Title"] = "Alumnos";
    Layout = "~/Views/Shared/_Layout.cshtml";


}




<p></p>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Tabla Alumnos</h3>
                        @* asp-route-IdAlumno="0" *@
                        <a asp-action="DireccionarAlumno" asp-controller="Alumnos" class="btn btn-dark btn-sm" style="float: right !important">Nuevo Alumno </a>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>ID Alumno</th>
                                    <th>Fecha Inscripcion</th>
                                    <th>Tag</th>
                                    <th>No. Dia Clases</th>
                                    <th>Fecha Inicio ClaseGratis</th>
                                    <th>Fecha FinClase Gratis</th>
                                    <th>Nombre</th>
                                    <th>Ap. Paterno</th>
                                    <th>Ap. Materno</th>
                                    <th>Edad</th>
                                    <th>Fecha Nacimiento</th>
                                    <th>Telefono Casa</th>
                                    <th>Celular</th>
                                    <th>Facebook</th>
                                    <th>Email</th> 
                                    <th>Enfermedades</th>
                                    <th>Discapacidad</th>
                                    <th>Instrumento Base</th>
                                    <th>Dia</th>
                                    <th>Instrumento Opcional</th>
                                    <th>Dia Opcio</th>
                                    <th>Hora Opcio</th>
                                    <th>Nombre Papa</th>
                                    <th>Celular Papas</th>
                                    <th>Facebook Papas</th>
                                    <th>Email Papas</th>
                                    <th>Tutor Recoger</th>
                                    <th>Celular Tutor</th>
                                    <th>NumEmergencia</th>
                                    <th>Estudios</th>
                                    <th>Grado Estudios</th>
                                    <th>Escuela Actuales</th>
                                    <th>Trabajas</th>
                                    <th>Lugar Trabajo</th>
                                    <th>Conocimiento Actual</th>
                                    <th>Instrumento</th>
                                    <th>Instrumento Casa</th>
                                    <th>No. Instrumento</th>
                                    <th>Como te enteraste de la Escuela</th>
                                    <th>Interes Gnro Musical</th>
                                    <th>Cuales</th>
                                    <th>Otro</th>
                                    <th>Clase Opcional</th>
                                    <th>DescuentoP</th>
                                    <th>amable</th>
                                    <th>NombreRecepcionista</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                                @{
                                        

                                
                                    foreach (var alumno in Model.Data)
                                    {
                                        <tr>
                                            <td>@alumno.IdAlumno</td>
                                            <td>@alumno.FechaInscripcion</td>
                                            <td>@alumno.Tag</td>
                                            <td>@alumno.NoDiaClases</td>
                                            <td>@alumno.FechaInicioClase</td>
                                            <td>@alumno.NombreCompleto</td>
                                            <td>@alumno.Edad</td>
                                            <td>@alumno.FechaNacimiento</td>
                                            <td>@alumno.TelefonoCasa</td>
                                            <td>@alumno.Celular</td>
                                            <td>@alumno.Facebook</td>
                                            <td>@alumno.Email</td>
                                            <td>@alumno.Enfermedades</td>
                                            <td>@alumno.Enfermedades</td>
                                            <td>@alumno.StringActivo</td>
                                            <td>
                                                <a asp-action="agregaralumnos" asp-controller="Alumnos" asp-route-IdAlumno="@alumno.IdAlumno" class="btn btn-light btn-sm" style="width:100%; margin-bottom:10px">EDITAR </a>
                                                <a asp-action="EliminarAlumnosV1" asp-controller="Alumnos" asp-route-IdAlumno="@alumno.IdAlumno" class="btn btn-danger btn-sm" style="width:100%;">ELIMINAR </a>
                                            </td>
                                        </tr>
                                    }

                                }
                                

                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>



