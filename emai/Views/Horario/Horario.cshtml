@model List<Horario>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Horarios</h3>

                        <a asp-action="agregarhorario" asp-controller="Horario" asp-route-IdHorario="0" class="btn btn-dark btn-sm" style="float: right !important">Nuevo Horario </a>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">



                        <table id="example1" class="table table-bordered table-hover">
                            <thead>
                                <tr>

                                    <th>Dia</th>
                                    <th>Hora</th>
                                    <th>Editar / Elminar</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@item.Dia</td>
                                      
                                        <td>@item.Hora</td>
                                        <td>
                                            <a asp-action="agregarhorario" asp-controller="Horario" asp-route-IdHorario="@item.IdHorario" class="btn btn-primary btn-sm">EDITAR </a>
                                            <a asp-action="Eliminar" asp-controller="Horario" asp-route-IdHorario="@item.IdHorario" class="btn btn-danger btn-sm">ELIMINAR </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            @* <tfoot>
                            <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Contraseña</th>
                            <th>Correo</th>
                            <th>Dirección</th>
                            <th>Teléfono</th>
                            </tr>
                            </tfoot>*@
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->


            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

