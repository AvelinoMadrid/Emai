@model List<Evento>

<link href="https://cdn.jsdelivr.net/npm/fullcalendar@5/dist/main.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@5/dist/main.js"></script>

<div id="calendar" style="width: height: 600px; border: 1px solid #ccc; background-color: #fff;"></div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Tabla Eventos</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">

                        <a asp-action="agregarevento" asp-controller="Evento" asp-route-IdEvento="0" class="btn btn-primary btn-sm">Nuevo Evento</a>


                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>IdEvento</th>
                                    <th>Nombre Evento</th>
                                    <th>Fecha</th>
                                    <th>Hora</th>
                                    <th>Alumno</th>
                                    <th>Clase</th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@item.IdEvento</td>
                                        <td>@item.NombreEvento</td>
                                        <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                                        <td>@item.Hora.ToString("hh:mm tt")</td>
                                        <td>@item.IdAlumno</td>
                                        <td>@item.IdClase</td>
                                        <td>
                                            <a asp-action="agregarevento" asp-controller="Horario" asp-route-IdEvento="@item.IdEvento" class="btn btn-primary btn-sm">EDITAR </a>
                                            <a asp-action="Eliminar" asp-controller="Horario" asp-route-IdEvento="@item.IdEvento" class="btn btn-danger btn-sm">ELIMINAR </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            @* <tfoot>
                            <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Contraseña</th>
                            <th>Correo</th>
                            <th>Dirección</th>
                            <th>Teléfono</th>
                            </tr>
                            </tfoot>*@
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->


            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');
        var events = @Html.Raw(Json.Serialize(Model));

        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth', // Puedes cambiar a 'timeGridWeek', 'timeGridDay', etc.
            events: events.map(function (event) {
                return {
                    title: event.NombreEvento,
                    start: event.Fecha,
                    allDay: true, // Esto asume eventos de día completo
                };
            })
        });

        calendar.render();
    });
</script>

