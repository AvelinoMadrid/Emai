@model List<Alumnos>

@{
    ViewData["Title"] = "Alumnos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Asignación de maestros</h3>
                        <a href="@Url.Action("agregarasignacionmaestros", "AsignacionMaestro")" class="btn btn-dark btn-sm" style="float: right !important">Asginación </a>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre del maestro</th>
                                    <th>Horario</th>
                                    <th>Día</th>
                                    <th>Clases</th>
                                    <th>Asignar</th>
                                    <th>Editar / Eliminar</th>
                                </tr>
                            </thead>
                            <tbody>

                                <tr>

                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>


                                    <td>
                                        <a class="btn btn-light btn-sm" style="width:100%; margin-bottom:10px">ASIGNAR </a>
                                        
                                    </td>
                                    <td>
                                        <a class="btn btn-light btn-sm" style="width:100%; margin-bottom:10px">EDITAR </a>
                                        <a class="btn btn-danger btn-sm" style="width:100%;">ELIMINAR </a>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

