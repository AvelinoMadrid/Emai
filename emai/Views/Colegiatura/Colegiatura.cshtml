@model List<GastosColegiatura>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Gastos Colegiatura</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">

                        <a asp-action="agregarcolegiatura" asp-controller="Colegiatura" asp-route-IdColegiatura="0" class="btn btn-primary btn-sm">Nueva Colegiatura</a>


                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>IdColegiatura</th>
                                    <th>Fecha</th>
                                    <th>NoPedido</th>
                                    <th>Descripcion</th>
                                    <th>Cantidad</th>
                                    <th>Subtotal</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@item.IdColegiatura</td>
                                        <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                                        <td>@item.NoPedido</td>
                                        <td>@item.Descripcion</td>
                                        <td>@item.Cantidad</td>
                                        <td>@item.Subtotal</td>
                                        <td>@item.Total</td>
                                        <td>
                                            <a asp-action="agregarcolegiatura" asp-controller="Colegiatura" asp-route-IdColegiatura="@item.IdColegiatura" class="btn btn-primary btn-sm">EDITAR </a>
                                            <a asp-action="Eliminar" asp-controller="Colegiatura" asp-route-IdColegiatura="@item.IdColegiatura" class="btn btn-danger btn-sm">ELIMINAR </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

