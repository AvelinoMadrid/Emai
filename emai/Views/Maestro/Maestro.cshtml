@model List<Maestro>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Tabla Maestros</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">

                        <a asp-action="agregarmaestro" asp-controller="Maestro" asp-route-IdUsuario="0" class="btn btn-primary btn-sm">Nuevo Maestro</a>


                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>idMaestro</th>
                                    <th>Nombre</th>
                                    <th>ApellidoP</th>
                                    <th>ApellidoM</th>
                                    <th>Direccion</th>
                                    <th>Telefono</th>
                                    <th>FechaNacimiento</th>
                                    <th>IdClase</th>
                                    <th>IdHorario</th>
                                    <th>IdAlumno</th>
                                    <th>Status</th>
                                    <th>Base</th>
                                    <th>Suplente</th>
                                    <th>Pago</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@item.IdMaestro</td>
                                        <td>@item.Nombre</td>
                                        <td>@item.ApellidoP</td>
                                        <td>@item.ApellidoM</td>
                                        <td>@item.Direccion</td>
                                        <td>@item.Telefono</td>
                                        <td>@item.FechaNacimiento</td>
                                        <td>@item.IdClase</td>
                                        <td>@item.IdHorario</td>
                                        <td>@item.IdAlumno</td>
                                        <td>@item.Status</td>
                                        <td>@item.Base</td>
                                        <td>@item.Suplente</td>
                                        <td>@item.Pago</td>
                                        <td>
                                            <a asp-action="agregarmaestro" asp-controller="Maestro" asp-route-IdUsuario="@item.IdMaestro" class="btn btn-primary btn-sm">EDITAR </a>
                                            <a asp-action="Eliminar" asp-controller="Maestro" asp-route-idUsuario="@item.IdMaestro" class="btn btn-danger btn-sm">ELIMINAR </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            @* <tfoot>
                            <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Contraseña</th>
                            <th>Correo</th>
                            <th>Dirección</th>
                            <th>Teléfono</th>
                            </tr>
                            </tfoot>*@
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->


            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
