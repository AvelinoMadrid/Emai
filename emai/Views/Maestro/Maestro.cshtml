@model List<Maestro>

@{
    ViewBag.Title = "Tabla de Maestros ";
}

<style>
    div.dt-buttons {
        position: initial;
        display: none !important;
    }
</style>



<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Tabla Maestros</h3>

                        <a asp-action="agregarmaestro" asp-controller="Maestro" asp-route-IdMaestro="0" class="btn btn-dark btn-sm" style="float:right !important">Nuevo Maestro</a>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">



                        <table id="example1" class="table table-bordered table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>ID Maestro</th>
                                    <th>Nombre</th>
                                    <th>Apellido Paterno</th>
                                    <th>Apellido Materno</th>
                                    <th>Direccion</th>
                                    <th>Telefono</th>
                                    <th>FechaNacimiento</th>
                                    <th>Status</th>
                                    <th>Dias trabajada</th>
                                    <th>Pago por Hora</th>
                                    <th>Pago Semanal</th>
                                    <th>Área</th>
                                    <th>Editar/Eliminar</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@item.IdMaestro</td>
                                        <td>@item.Nombre</td>
                                        <td>@item.ApellidoP</td>
                                        <td>@item.ApellidoM</td>
                                        <td>@item.Direccion</td>
                                        <td>@item.Telefono</td>
                                        <td>@item.FechaNacimiento.ToString("dd/MM/yyyy")</td>

                                        <td>
                                            @item.Estatus
                                        </td>
                                        <td>@item.PagoSemanal</td>
                                        <td>@item.Pago</td>
                                        <td>@item.PagoHora</td>
                                        <td>@item.Area</td>
                                        <td>
                                            <a asp-action="agregarmaestro" asp-controller="Maestro" asp-route-IdMaestro="@item.IdMaestro" class="btn btn-light btn-sm" style="width:100%; margin-bottom:10px">EDITAR </a>
                                            <a asp-action="Eliminar" asp-controller="Maestro" asp-route-IdMaestro="@item.IdMaestro" class="btn btn-danger btn-sm" style="width:100%;">ELIMINAR </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->


            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

<script>
    $(document).ready(function () {
        $('#example2').DataTable({
            "scrollX": true
        });
        $('.dataTables_length').addClass('bs-select');
    });
</script>