@model Maestro

@{
    ViewData["Title"] = "agregarmaestro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        @ViewBag.Accion
    </div>
    <!-- /.card-header -->
    <div class="card-body">

        <form asp-action="GuardarCambios" asp-controller="Maestro" method="post">

            <input asp-for="IdMaestro" type="hidden" />

            <div class="mb-2">
                <label class="form-label">Nombre</label>
                <input type="text" class="form-control form-control-sa" asp-for="Nombre" />
            </div>
            <div class="mb-2">
                <label class="form-label">ApellidoP</label>
                <input type="text" class="form-control form-control-sa" asp-for="ApellidoP" />
            </div>
            <div class="mb-2">
                <label class="form-label">ApellidoM</label>
                <input type="text" class="form-control form-control-sa" asp-for="ApellidoM" />
            </div>
            <div class="mb-2">
                <label class="form-label">Direccion</label>
                <input type="text" class="form-control form-control-sa" asp-for="Direccion" />
            </div>
            <div class="mb-2">
                <label class="form-label">Telefono</label>
                <input type="text" class="form-control form-control-sa" asp-for="Telefono" />
            </div>
            <div class="mb-2">
                <label class="form-label">FechaNacimiento</label>
                <input type="text" class="form-control form-control-sa" asp-for="FechaNacimiento" />
            </div>
            <div class="mb-2">
                <label class="form-label">IdClase</label>
                <input type="text" class="form-control form-control-sa" asp-for="IdClase" />
            </div>
            <div class="mb-2">
                <label class="form-label">IdHorario</label>
                <input type="text" class="form-control form-control-sa" asp-for="IdHorario" />
            </div>
            <div class="mb-2">
                <label class="form-label">IdAlumno</label>
                <input type="text" class="form-control form-control-sa" asp-for="IdAlumno" />
            </div>
            <div class="mb-2">
                <label class="form-label">Status</label>
                <input type="text" class="form-control form-control-sa" asp-for="Status" />
            </div>
            <div class="mb-2">
                <label class="form-label">Base</label>
                <input type="text" class="form-control form-control-sa" asp-for="Base" />
            </div>
            <div class="mb-2">
                <label class="form-label">Suplente</label>
                <input type="text" class="form-control form-control-sa" asp-for="Suplente" />
            </div>
            <div class="mb-2">
                <label class="form-label">Pago</label>
                <input type="text" class="form-control form-control-sa" asp-for="Pago" />
            </div>

            <button type="submit" class="btn btn-success btn-sm">Guardar Cambios</button>

            <a asp-action="Maestro" asp-controller="Maestro" class="btn btn-warning btn-sm">Volver a la vista </a>

        </form>

        @*<a asp-action="agregarusuario" asp-controller="Usuarios" asp-route-IdUsuario="0" class="btn btn-primary btn-sm">Nuevo Usuario </a>*@




    </div>
</div>
